{
  "name": "trinity-infrastructure",
  "version": "1.0.0",
  "description": "Trinity MVP Infrastructure with AWS CDK - Serverless Microservices",
  "main": "lib/trinity-stack.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "validate": "npx ts-node scripts/validate-deployment.ts",
    "validate:pre": "npx ts-node scripts/validate-deployment.ts --pre",
    "rollback": "npx ts-node scripts/rollback-manager.ts",
    "rollback:list": "npx ts-node scripts/rollback-manager.ts list",
    "deploy": "npm run validate:pre && npm run build && cdk deploy TrinityConfigStack TrinityDatabaseStack TrinityLambdaStack TrinityMainStack --require-approval never",
    "deploy:master": "npx ts-node scripts/deploy-master.ts",
    "deploy:config": "npm run build && cdk deploy TrinityConfigStack",
    "deploy:database": "npm run build && cdk deploy TrinityDatabaseStack",
    "deploy:lambda": "npm run build && cdk deploy TrinityLambdaStack",
    "deploy:api": "npm run build && cdk deploy TrinityApiStack",
    "deploy:main": "npm run build && cdk deploy TrinityMainStack",
    "deploy:all": "npm run validate && npm run build && cdk deploy --all --require-approval never",
    "destroy": "cdk destroy --all",
    "synth": "npm run build && cdk synth",
    "diff": "npm run build && cdk diff",
    "bootstrap": "cdk bootstrap aws://unknown-account/eu-west-1",
    "list": "cdk list",
    "hotswap": "npm run build && cdk deploy TrinityLambdaStack --hotswap",
    "hotswap:all": "npx ts-node scripts/hotswap-deploy.ts",
    "hotswap:lambda": "npx ts-node scripts/hotswap-deploy.ts --lambda-only TrinityLambdaStack",
    "hotswap:watch": "npx ts-node scripts/hotswap-deploy.ts watch --lambda-only",
    "workflow": "npx ts-node scripts/workflow-helper.ts",
    "workflow:help": "npx ts-node scripts/workflow-helper.ts workflows",
    "validate:naming": "npx ts-node scripts/validate-naming.ts",
    "monitoring:deploy": "npx ts-node scripts/setup-monitoring.ts deploy",
    "monitoring:validate": "npx ts-node scripts/setup-monitoring.ts validate",
    "monitoring:setup": "npx ts-node scripts/setup-monitoring.ts setup",
    "test:integration": "npx ts-node scripts/integration-test.ts",
    "test:property": "jest --testPathPatterns=property.test.ts --verbose",
    "test:all": "npm run test:property && npm run test:integration",
    "validate:schema": "npx ts-node scripts/validate-schema-match.ts",
    "hydrate-ssm": "npx ts-node scripts/hydrate-ssm.ts",
    "validate-ssm": "npx ts-node scripts/hydrate-ssm.ts validate",
    "validate-config": "npx ts-node scripts/validate-config.ts",
    "import:database": "npm run validate:schema && npm run build && cdk import TrinityDatabaseStack",
    "import:api": "npm run build && cdk import TrinityApiStack"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.160",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/uuid": "^10.0.0",
    "chokidar": "^4.0.1",
    "esbuild": "^0.27.2",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@aws-sdk/client-appsync": "^3.282.0",
    "@aws-sdk/client-cloudformation": "^3.282.0",
    "@aws-sdk/client-cloudwatch": "^3.282.0",
    "@aws-sdk/client-dynamodb": "^3.282.0",
    "@aws-sdk/client-lambda": "^3.282.0",
    "@aws-sdk/client-sns": "^3.282.0",
    "@aws-sdk/client-ssm": "^3.980.0",
    "@aws-sdk/client-sts": "^3.980.0",
    "@aws-sdk/lib-dynamodb": "^3.975.0",
    "adm-zip": "^0.5.16",
    "aws-cdk-lib": "2.100.0",
    "constructs": "^10.0.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.0"
  }
}
