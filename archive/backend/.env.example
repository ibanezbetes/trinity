# ==================== APPLICATION CONFIGURATION ====================
# Configuración de la aplicación
NODE_ENV=development
PORT=3002
STAGE=dev

# ==================== AWS COGNITO CONFIGURATION ====================
# AWS Cognito User Pool Configuration
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_REGION=eu-west-1

# AWS Cognito Identity Pool Configuration (for Google Federation)
COGNITO_IDENTITY_POOL_ID=your-cognito-identity-pool-id
COGNITO_IDENTITY_POOL_REGION=eu-west-1
COGNITO_GOOGLE_PROVIDER_NAME=accounts.google.com
COGNITO_FEDERATED_IDENTITY_ENABLED=true

# ==================== GOOGLE OAUTH CONFIGURATION ====================
# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-web-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/auth/google/callback

# Google Authentication Security Settings
GOOGLE_ALLOWED_DOMAINS=
# Comma-separated list of allowed email domains (optional)
# Example: GOOGLE_ALLOWED_DOMAINS=company.com,organization.org

# ==================== AWS CONFIGURATION ====================
# AWS Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_ACCOUNT_ID=your-aws-account-id

# ==================== DATABASE CONFIGURATION ====================
# DynamoDB Configuration
DYNAMODB_TABLE_NAME=trinity-main
DYNAMODB_REGION=eu-west-1
DYNAMODB_ENDPOINT=
# Leave empty for production, set to http://localhost:8000 for local DynamoDB

# ==================== SECURITY CONFIGURATION ====================
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 900000 ms

# Security Headers
SECURITY_CORS_ORIGIN=http://localhost:3000,http://localhost:3001
SECURITY_HELMET_ENABLED=true

# ==================== EXTERNAL APIS CONFIGURATION ====================
# TMDB API Configuration
TMDB_API_KEY=your-tmdb-api-key
TMDB_BASE_URL=https://api.themoviedb.org/3

# Hugging Face API Configuration (para Salamandra/ALIA)
HF_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== CDN AND OPTIMIZATION CONFIGURATION ====================
# CloudFront Configuration (opcional para desarrollo)
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# CDN Configuration
CDN_BASE_URL=https://image.tmdb.org/t/p/
CLOUDFRONT_DISTRIBUTION=your-cloudfront-distribution-id
IMAGE_OPTIMIZATION_ENABLED=true
CDN_CACHE_TTL=86400

# ==================== COST AND MONITORING CONFIGURATION ====================
# Cost Optimization Configuration
MONTHLY_BUDGET_LIMIT=50
ALERT_EMAIL=admin@trinity.com
COST_MONITORING_ENABLED=true
AUTO_SCALING_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# Metrics Collection
METRICS_ENABLED=true
METRICS_INTERVAL=60000

# ==================== APPLICATION LIMITS CONFIGURATION ====================
# Configuración de timeouts y límites
INACTIVE_MEMBER_TIMEOUT_MINUTES=30
MAX_ROOM_MEMBERS=10
MAX_MASTER_LIST_SIZE=100

# Configuración de Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000
CIRCUIT_BREAKER_RESET_TIMEOUT_MS=30000

# ==================== FEATURE FLAGS ====================
# Authentication Features
AUTH_GOOGLE_ENABLED=true
AUTH_FEDERATED_ENABLED=true
AUTH_EMAIL_VERIFICATION_REQUIRED=true

# Security Features
SECURITY_RATE_LIMITING_ENABLED=true
SECURITY_IP_WHITELIST_ENABLED=false
SECURITY_AUDIT_LOGGING_ENABLED=true

# Performance Features
PERFORMANCE_CACHING_ENABLED=true
PERFORMANCE_COMPRESSION_ENABLED=true
PERFORMANCE_CONNECTION_POOLING_ENABLED=true