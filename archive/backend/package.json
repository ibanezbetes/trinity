{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch",
    "test:e2e:cov": "jest --config ./test/jest-e2e.json --coverage",
    "test:e2e:user-flow": "jest --config ./test/jest-e2e.json --testPathPatterns=\"user-flow\"",
    "test:e2e:performance": "jest --config ./test/jest-e2e.json --testPathPatterns=\"performance\"",
    "test:e2e:advanced": "jest --config ./test/jest-e2e.json --testPathPatterns=\"realtime-advanced\"",
    "test:all": "npm run test && npm run test:e2e",
    "aws:check": "node scripts/check-aws-connectivity.js",
    "aws:health": "curl -s http://localhost:3000/health/aws | jq .",
    "aws:setup": "node scripts/setup-test-credentials.js",
    "google:setup": "node scripts/setup-google-identity-provider.js"
  },
  "dependencies": {
    "@aws-sdk/client-budgets": "^3.958.0",
    "@aws-sdk/client-dynamodb": "^3.958.0",
    "@aws-sdk/client-sts": "^3.958.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/throttler": "^6.5.0",
    "@nestjs/websockets": "^11.1.10",
    "aws-jwt-verify": "^4.0.1",
    "axios": "^1.7.2",
    "compression": "^1.8.1",
    "google-auth-library": "^10.5.0",
    "graphql-request": "^7.4.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.35.0",
    "passport-custom": "^1.1.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.1",
    "fast-check": "^3.23.2",
    "supertest": "^7.0.0"
  }
}