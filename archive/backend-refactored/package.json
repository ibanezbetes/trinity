{
  "name": "trinity-backend-refactored",
  "version": "2.0.0",
  "description": "Trinity Backend - Simplified Infrastructure with NestJS",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:report": "eslint \"{src,apps,libs,test}/**/*.ts\" --format json --output-file reports/eslint-report.json",
    "type-check": "tsc --noEmit",
    
    "quality:check": "ts-node src/quality/scripts/run-quality-checks.ts",
    "quality:check:ci": "ts-node src/quality/scripts/run-quality-checks.ts --ci",
    "quality:gates": "ts-node src/quality/scripts/enforce-quality-gates.ts",
    "quality:report": "npm run quality:check && open reports/quality-report.html",
    "quality:metrics": "ts-node src/quality/scripts/generate-quality-metrics.ts",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:unit": "jest --testPathPattern=src/.*\\.spec\\.ts$",
    "test:integration": "jest --testPathPattern=src/.*\\.integration\\.spec\\.ts$",
    "test:compatibility": "jest --testPathPattern=src/.*\\.compatibility\\.spec\\.ts$",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov --coverageReporters=html",
    
    "cdk:synth": "cdk synth --all",
    "cdk:diff": "cdk diff --all",
    "cdk:deploy": "cdk deploy --all --require-approval never",
    "cdk:destroy": "cdk destroy --all --force",
    
    "deploy:simplified": "ts-node src/infrastructure/scripts/deploy-simplified-stack.ts",
    "deploy:dev": "ENVIRONMENT=development npm run deploy:simplified",
    "deploy:staging": "ENVIRONMENT=staging npm run deploy:simplified",
    "deploy:prod": "ENVIRONMENT=production npm run deploy:simplified",
    
    "rollback:simplified": "ts-node src/infrastructure/scripts/rollback-simplified-stack.ts",
    
    "benchmark:api": "ts-node src/infrastructure/benchmarks/performance-benchmarks.ts --suite=api",
    "benchmark:realtime": "ts-node src/infrastructure/benchmarks/performance-benchmarks.ts --suite=realtime",
    "benchmark:database": "ts-node src/infrastructure/benchmarks/performance-benchmarks.ts --suite=database",
    "benchmark:all": "ts-node src/infrastructure/benchmarks/performance-benchmarks.ts",
    
    "setup:monitoring": "ts-node src/infrastructure/scripts/setup-monitoring.ts",
    "setup:alerts": "ts-node src/infrastructure/scripts/setup-alerts.ts",
    "validate:monitoring": "ts-node src/infrastructure/scripts/validate-monitoring.ts",
    
    "report:performance": "ts-node src/infrastructure/scripts/generate-performance-report.ts",
    "report:cost": "ts-node src/infrastructure/scripts/generate-cost-report.ts",
    "report:compatibility": "ts-node src/infrastructure/scripts/generate-compatibility-report.ts",
    
    "logs:auth": "aws logs tail /aws/lambda/trinity-auth-v2 --follow",
    "logs:core": "aws logs tail /aws/lambda/trinity-core-v2 --follow",
    "logs:realtime": "aws logs tail /aws/lambda/trinity-realtime-v2 --follow",
    
    "metrics:collect": "ts-node src/infrastructure/scripts/collect-metrics.ts",
    "metrics:dashboard": "ts-node src/infrastructure/scripts/open-dashboard.ts",
    
    "health:check": "ts-node src/infrastructure/scripts/health-check.ts",
    "health:full": "ts-node src/infrastructure/scripts/comprehensive-health-check.ts",
    
    "cleanup:old-resources": "ts-node src/infrastructure/scripts/cleanup-old-resources.ts",
    "cleanup:logs": "ts-node src/infrastructure/scripts/cleanup-old-logs.ts",
    
    "docs:generate": "typedoc --out docs src",
    "docs:serve": "http-server docs -p 8080",
    
    "security:scan": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/graphql": "^12.0.0",
    "@apollo/server": "^4.0.0",
    "graphql": "^16.6.0",
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0",
    "@aws-sdk/client-dynamodb": "^3.400.0",
    "@aws-sdk/lib-dynamodb": "^3.400.0",
    "@aws-sdk/client-lambda": "^3.400.0",
    "@aws-sdk/client-appsync": "^3.400.0",
    "@aws-sdk/client-cloudwatch": "^3.400.0",
    "@aws-sdk/client-sns": "^3.400.0",
    "aws-lambda": "^1.0.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/aws-lambda": "^8.10.119",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.1",
    "typescript": "^5.1.3",
    "aws-cdk": "^2.100.0",
    "fast-check": "^3.13.0",
    "node-fetch": "^3.3.2",
    "ws": "^8.14.0",
    "typedoc": "^0.25.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trinity/backend-refactored.git"
  },
  "keywords": [
    "trinity",
    "nestjs",
    "aws",
    "serverless",
    "graphql",
    "realtime",
    "movie-voting"
  ],
  "author": "Trinity Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trinity/backend-refactored/issues"
  },
  "homepage": "https://github.com/trinity/backend-refactored#readme"
}