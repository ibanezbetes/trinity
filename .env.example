# ========================================
# AWS CONFIGURATION (REQUERIDO)
# ========================================
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=eu-west-1
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_ACCOUNT_ID=your-aws-account-id

# ========================================
# EXTERNAL API KEYS
# ========================================
# TMDB API Key - Obtener en: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your-tmdb-api-key
TMDB_BASE_URL=https://api.themoviedb.org/3

# Hugging Face API Token - Obtener en: https://huggingface.co/settings/tokens
HF_API_TOKEN=hf_your-hugging-face-token

# ========================================
# AWS COGNITO AUTHENTICATION
# ========================================
# Estos valores se generan automÃ¡ticamente despuÃ©s del deploy de CDK
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_REGION=eu-west-1

# ========================================
# DYNAMODB CONFIGURATION
# ========================================
DYNAMODB_TABLE_NAME=trinity-main
USERS_TABLE=trinity-users
ROOMS_TABLE=trinity-rooms
ROOM_MEMBERS_TABLE=trinity-room-members
MOVIES_CACHE_TABLE=trinity-movies-cache

# ========================================
# SECURITY
# ========================================
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================
STAGE=dev
NODE_ENV=development

# ========================================
# CLOUDFRONT & CDN
# ========================================
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id
S3_BUCKET_NAME=trinity-mvp-assets

# ========================================
# MONITORING & LOGGING
# ========================================
LOG_LEVEL=info
ENABLE_METRICS=true